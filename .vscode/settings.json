{
    "liveServer.settings.port": 5501,
    "stylelint.configFile": "./.stylelintrc.json",
    // ✅ 启用 Stylelint 插件校验
    "stylelint.validate": [
        "css",
        "scss",
        "less"
    ],
    // ✅ 启用保存时自动执行 stylelint 修复
    "editor.codeActionsOnSave": {
        "source.fixAll.stylelint": "explicit"
    },
    "prettier.configPath": "./.prettierrc",
}