{
    "liveServer.settings.port": 5501,
    // ✅ 启用 Stylelint 插件校验
    "stylelint.validate": [
        "css",
        "scss",
        "less"
    ],
    // ✅ 启用保存时自动执行 stylelint 修复
    "editor.codeActionsOnSave": {
        "source.fixAll.stylelint": "explicit"
    },
    "files.exclude": {
        "__pycache__": true,
        "LICENSE": true,
    },
    "prettier.configPath": ".prettierrc",
}